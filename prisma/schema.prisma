generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  USER
  ADMIN
}

// 1. Tabel User
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  fullName  String
  phone     String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  detections DetectionHistory[]
}

// 2. Tabel Diseases
model Disease {
  id          Int      @id @default(autoincrement())
  code        String   @unique
  name        String   
  description String   @db.Text  
  solutions   String[]
  thumbnailUrl String?

  // Relasi
  detections DetectionHistory[]
  articles   Article[] 
}

// 3. Tabel DetectionHistory
model DetectionHistory {
  id          String   @id
  imageUrl    String
  accuracy    Float
  status      String
  detectedAt  DateTime @default(now())

  // Relasi
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  diseaseId   Int
  disease     Disease  @relation(fields: [diseaseId], references: [id])
}

// 4. Tabel Articles
model Article {
  id           Int      @id @default(autoincrement())
  title        String
  slug         String   @unique
  category     String
  author       String
  description  String   @db.Text
  symptoms     String   @db.Text
  causes       String   @db.Text
  treatment    String   @db.Text
  prevention   String   @db.Text
  conclusion   String   @db.Text
  thumbnailUrl String
  createdAt    DateTime @default(now())

  // Relasi
  diseaseId    Int?     
  disease      Disease? @relation(fields: [diseaseId], references: [id])
}